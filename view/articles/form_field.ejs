<div class="form-group mb-3">
  <h3><label for="title">Title</label></h3>
  <input
    required
    value="<%=article.title%>"
    type="text"
    name="title"
    class="form-control"
  />
</div>
<div class="form-group mb-3">
  <h4><label for="description">Description</label></h4>
  <textarea name="description" id="description" class="form-control" rows="5" >
<%=article.description%></textarea
  >
</div>
<div class="form-group mb-3">
  <h5><label for="markdown">Tell us your story...</label></h5>
  <textarea
    required
    name="markdown"
    id="markdown"
    class="form-control"
    rows="10"
    
  >
<%=article.markdown%></textarea
  >
</div>
<br />
<a href="/" class="dark-btn">Cancel</a>
<button type="submit" class="green-btn">Save</button>
