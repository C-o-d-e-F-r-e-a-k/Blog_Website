<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/designSystem.css" />
    <title>Blog Website</title>
  </head>

  <body>
    <div class="navbar">
      <div class="navbar_left">
        <img src="/images/logo2.png" alt="logo" class="logo" />
        <h1 class="blogWeb">Blog_Web</h1>
      </div>
      <div class="navbar_right">
        <a href="/articles/new" class="btn create_btn">
          <i class="fa-regular fa-pen-to-square create_icon"></i>
          Create article
        </a>
      </div>
    </div>

    <h2 class="topArticles">Top Articles:</h2>

    <div class="container">
      <% articles.forEach(article=>{%>
      <div class="box">
        <div class="box-body">
          <div class="box-body-left">
            <h2 class="card-title"><%=article.title%></h2>
            <div class="card-subtitle text-muted">
              <%=article.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text"><%=article.description%></div>
            <div class="box-body-left-btn">
              <a href="articles/<%=article.slug%>" class="btn btn-read hover"
                >Read More</a
              >
              <a
                href="articles/edit/<%= article.id%>"
                class="btn btn-edit hover"
                >Edit</a
              >
              <form
                action="/articles/<%=article.id %>?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-delete hover">
                  Delete
                </button>
              </form>
            </div>
          </div>
          <div class="box-body-right"></div>
        </div>
      </div>

      <%})%>
    </div>
  </body>
</html>
